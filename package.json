{
  "name": "hack-a-mole-backend",
  "version": "0.0.1",
  "description": "A whack-a-mole game backend example ðŸ¦”",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch src --exec 'yarn build && yarn start:native'",
    "start:native": "nodemon -r @babel/register -r dotenv/config build dotenv_config_path=.env",
    "serve": "node  -r @babel/register -r dotenv/config build dotenv_config_path=$CONFIG_LOCATION",
    "build": "./node_modules/.bin/babel ./src -d build -s",
    "build:clean": "docker rmi $(docker images -f \"dangling=true\" -q)",
    "build:container": "docker build -t mole-api:latest .",
    "build:tag": "docker tag mole-api:latest registry.digitalocean.com/bounce/mole-api:latest",
    "deploy": "yarn build:container && yarn build:tag && docker push registry.digitalocean.com/bounce/mole-api:latest && yarn build:clean",
    "clean": "rm -rf build && mkdir build",
    "init-eslint": "eslint --init"
  },
  "dependencies": {
    "apollo-server": "^2.13.1",
    "apollo-server-express": "^2.13.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-constraint-directive": "^2.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-rate-limit-directive": "^1.2.1",
    "graphql-resolvers": "^0.4.2",
    "graphql-subscriptions": "^1.1.0",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.2.1",
    "sequelize": "^5.21.11",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.13.8",
    "babel-plugin-inline-json-import": "^0.3.2",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "graphql-tools": "^6.0.0",
    "nodemon": "^2.0.4"
  }
}